const OBJECT_LAUNCH_COUNTER_SCIENTIST = 1
const OBJECT_SCIENTIST_2 = 2
const OBJECT_STEVEN = 11
const OBJECT_OLDMAN = 4
const OBJECT_SAILOR = 3

const WARP_IN_RETURN_X = 7
const WARP_IN_RETURN_Y = 4

mapscripts MossdeepCity_SpaceCenter_1F_MapScripts {
    MAP_SCRIPT_ON_LOAD: MossdeepCity_SpaceCenter_1F_OnLoad
	MAP_SCRIPT_ON_TRANSITION: MossdeepCity_SpaceCenter_1F_OnTransition
	MAP_SCRIPT_ON_WARP_INTO_MAP_TABLE [
		VAR_TEMP_LOADED, 0 {
			setvar(VAR_TEMP_LOADED, 1)
			getplayerxy(VAR_TEMP_0, VAR_TEMP_1)
			if (var(VAR_TEMP_0) == WARP_IN_RETURN_X && var(VAR_TEMP_1) == WARP_IN_RETURN_Y) {
				call(MossdeepCity_SpaceCenter_1F_ReturnedFromSpaceSetup)
			}
		}
	]
    MAP_SCRIPT_ON_FRAME_TABLE [
        VAR_TEMP_LOADED, 1 {
            setvar(VAR_TEMP_LOADED, 2)
            getplayerxy(VAR_TEMP_0, VAR_TEMP_1)
            if (var(VAR_TEMP_0) == WARP_IN_RETURN_X && var(VAR_TEMP_1) == WARP_IN_RETURN_Y) {
                call(MossdeepCity_SpaceCenter_1F_ReturnedFromSpace)
            }
        }
    ]
}

script MossdeepCity_SpaceCenter_1F_EventScript_RocketLaunchCounter {
	lock
	faceplayer
	if (flag(FLAG_TALKED_TO_WHITE_ROCK)) {
		if (flag(FLAG_SPOKEN_ABOUT_MILLENNIUM_COMET)) {
			call(MossdeepCity_SpaceCenter_1F_ReadyForSpace)
		}
		else {
			call(MossdeepCity_SpaceCenter_1F_ShowWhiteRock)
		}
		release
		end
	}

	goto_if_eq(VAR_MOSSDEEP_CITY_STATE, 2, MossdeepCity_SpaceCenter_1F_EventScript_RocketLaunchCounterMagma)
	dotimebasedevents
	specialvar(VAR_RESULT, GetWeekCount)
	buffernumberstring(STR_VAR_1, VAR_RESULT)
	call_if_eq(VAR_RESULT, 0, MossdeepCity_SpaceCenter_1F_EventScript_NoLaunchesYet)
	call_if_ge(VAR_RESULT, 1, MossdeepCity_SpaceCenter_1F_EventScript_ShowLaunchNumber)
	closemessage
	applymovement(VAR_LAST_TALKED, Common_Movement_FaceOriginalDirection)
	waitmovement(0)
	release
	end
}

script MossdeepCity_SpaceCenter_1F_ShowWhiteRock {
	setflag(FLAG_SPOKEN_ABOUT_MILLENNIUM_COMET)
	buffernumberstring(STR_VAR_1, 100)
	call(MossdeepCity_SpaceCenter_1F_EventScript_ShowLaunchNumber)
	playse(SE_PIN)
	applymovement(OBJECT_LAUNCH_COUNTER_SCIENTIST, Common_Movement_ExclamationMark)
	waitmovement(0)
	waitse
	msgbox(format("Is that... a piece of the white rock just outside the space center?\p"
		"It's not? Goodness it is remarkably similar!\p"
		"This is incredible, these stones are very special to us here.\p"
		"They are small fragments of the Millennium Comet, a pure-white comet that is seen for only a single week every thousand years.\p"
		"You might have heard this is due to happen very soon.\p"
		"You've seen it on TV right?\p"
		"The Milennium Festival where the comet is visible at night is being prepared in the coming weeks..."), MSGBOX_DEFAULT)
	playse(SE_PIN)
	applymovement(OBJECT_SCIENTIST_2, Common_Movement_ExclamationMark)
	applymovement(OBJECT_SCIENTIST_2, Common_Movement_FaceRight)
	waitmovement(0)
	waitse
	delay(20)
	applymovement(OBJECT_SCIENTIST_2, MossdeepCity_SpaceCenter_1F_Scientist2ApproachPlayer)
	waitmovement(0)
	setvar(VAR_TARGET_OBJECT_EVENT, OBJECT_SCIENTIST_2)
	if (var(VAR_FACING) == DIR_EAST) {
		applymovement(OBJ_EVENT_ID_PLAYER, Common_Movement_WalkDown)
	}
	elif (var(VAR_FACING) == DIR_WEST) {
		applymovement(OBJ_EVENT_ID_PLAYER, MossdeepCity_SpaceCenter_1F_PlayerMoveToScientist2)
	}
	applymovement(OBJECT_SCIENTIST_2, Common_Movement_WalkRight)
	waitmovement(OBJECT_SCIENTIST_2)
	waitmovement(OBJ_EVENT_ID_PLAYER)
	playerfaceobject(OBJECT_SCIENTIST_2)
	faceobject(OBJECT_LAUNCH_COUNTER_SCIENTIST, OBJECT_SCIENTIST_2)
	delay(20)
	msgbox(format("I couldn't help but overhear you pair talking about the Millennium Comet.\p"
		"We have performed many geological studies on the white rock here in Mossdeep.\p"
		"No other fragments have ever been reported showing up on Earth except the one right here."), MSGBOX_DEFAULT)
	objectfaceplayer(OBJECT_SCIENTIST_2)
	msgbox(format("And now of course this one you have right here...\p"
		"To deepen the mystery, we also discovered minerals in the white rock that we have never identified in any other recorded comet.\p"
		"Many of us here at the space center believe that the Millennium Comet is something very special."), MSGBOX_DEFAULT)
	delay(20)
	objectfaceplayer(OBJECT_LAUNCH_COUNTER_SCIENTIST)
	playerfaceobject(OBJECT_LAUNCH_COUNTER_SCIENTIST)
	applymovement(OBJECT_LAUNCH_COUNTER_SCIENTIST, Common_Movement_WalkInPlace)
	waitmovement(0)
	delay(20)
	msgbox(format("Showing up right here at the space center now of all times is very bizarre...\p"
		"With the festival just around the corner, the 100th successful rocket launch, and the comet approaching very soon...\p"
		"I think it can't just be a coincidence.\p"
		".........\p"
		"The comet is due to pass very close to our moon in about 2 weeks time.\p"
		"You should join the spacecraft crew on their next journey to the moon for the event.\p"
		"I'm not kidding either, this is truly a once in a lifetime opportunity to try and unravel the secrets the comet must hold.\p"
		"It must either be destiny that brought you here today, or a long held wish from the cosmos..."), MSGBOX_DEFAULT)
	delay(20)
	applymovement(OBJECT_SCIENTIST_2, Common_Movement_WalkInPlaceDown)
	waitmovement(0)
	playerfaceobject(OBJECT_SCIENTIST_2)
	delay(20)
	checkplayergender
	if (var(VAR_RESULT) == MALE) {
		msgbox(format("What do you say young man?"), MSGBOX_DEFAULT)
	}
	else {
		msgbox(format("What do you say young lady?"), MSGBOX_DEFAULT)
	}
	msgbox(format("Would you like to join the crew on the next expedition to the moon?"), MSGBOX_YESNO)
	if (var(VAR_RESULT) == YES) {
		msgbox(format("You will be able to help us out with some incredible research. You should be proud!\p"
			"Our team will help arrange the paperwork and prepare you for space travel.\p"
			"Please return here as soon as you are ready for take-off."), MSGBOX_DEFAULT)
	}
	else {
		msgbox(format("I understand. It's a huge decision to make, travelling into space. Think it over and come back and talk to us if you decide to join."), MSGBOX_DEFAULT)
	}
}

movement MossdeepCity_SpaceCenter_1F_Scientist2ApproachPlayer { walk_right * 3 }
