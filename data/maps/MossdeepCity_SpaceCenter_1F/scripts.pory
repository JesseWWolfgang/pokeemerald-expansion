movement MossdeepCity_SpaceCenter_1F_PlayerMoveToScientist2 { walk_down walk_left }

script MossdeepCity_SpaceCenter_1F_ReadyForSpace {
	msgbox(format("Have you prepared yourself for the trip to the moon?\p"
	"Once we take off, we won't be returning until we have completed the expedition or the mission is cancelled.\p"
	"Additionally, we will have NO connection to the Pokémon Storage System, so make sure you have your best team with you.\p"
	"Are you ready?"), MSGBOX_YESNO)
	if (var(VAR_RESULT) == NO) {
		msgbox(format("Please get yourself ready and return ASAP, you won't want to miss this."), MSGBOX_DEFAULT)
		return
	}

	msgbox(format("I will go and find one of our guides, they will show you to the launch pad. Please wait here a moment."), MSGBOX_DEFAULT)
	warpdirection(DIR_NORTH, MAP_MOSSDEEP_CITY_SPACE_CENTER_PAD, 0)
	waitstate
}

script MossdeepCity_SpaceCenter_1F_ReturnedFromSpaceSetup {
	// If Steven is hidden, remember that he needs to be re-hidden and show him temporarily.
	clearflag(FLAG_TEMP_1)
	if (flag(FLAG_HIDE_MOSSDEEP_CITY_SPACE_CENTER_1F_STEVEN)) {
		setflag(FLAG_TEMP_1)
		clearflag(FLAG_HIDE_MOSSDEEP_CITY_SPACE_CENTER_1F_STEVEN)
		addobject(OBJECT_STEVEN)
	}

	setobjectxy(OBJECT_STEVEN, 8, 2)
	setobjectxy(OBJECT_SCIENTIST_2, 6, 2)
	turnobject(OBJ_EVENT_ID_PLAYER, DIR_NORTH)
	turnobject(OBJECT_STEVEN, DIR_SOUTH)
	turnobject(OBJECT_SCIENTIST_2, DIR_SOUTH)
	turnobject(OBJECT_LAUNCH_COUNTER_SCIENTIST, DIR_SOUTH)
	turnobject(OBJECT_OLDMAN, DIR_WEST)
	turnobject(OBJECT_SAILOR, DIR_NORTH)
}

script MossdeepCity_SpaceCenter_1F_ReturnedFromSpace {
	lockall

	msgbox(format("Well done {PLAYER} on a successful mission!\p"
	"You played an instrumental role in our research, proving beyond a shadow of a doubt that the Millennium Comet holds amazing secrets."), MSGBOX_DEFAULT)
	closemessage
	delay(20)

	applymovement(OBJECT_STEVEN, Common_Movement_WalkInPlace)
	waitmovement(0)
	if (flag(FLAG_JIRACHI_WISH_PERFECT_BIDOOF)) {
		msgbox(format("Take good care of that Jirachi {PLAYER}.\p"
		"I hope your wish comes true.\lI'm certain it will."), MSGBOX_DEFAULT)
	}
	else {
		msgbox(format("Take good care of that Jirachi {PLAYER}.\p"
		"I could see in the footage, your wish was beautiful.\lCherish that moment."), MSGBOX_DEFAULT)
	}
	closemessage
	delay(20)

	applymovement(OBJECT_LAUNCH_COUNTER_SCIENTIST, Common_Movement_WalkInPlace)
	waitmovement(0)
	msgbox(format("We at the institute have a few gifts for you to commemorate this significant achievement,\land of course, as a personal thank-you from us..."), MSGBOX_DEFAULT)
	closemessage
	delay(16)
	applymovement(OBJECT_SCIENTIST_2, MossdeepCity_SpaceCenter_1F_Scientist2GivePlayerGift)
	waitmovement(0)
	delay(30)
	giveitem(ITEM_BEAST_BALL, 20)
	giveitem(ITEM_ABILITY_PATCH, 3)
	giveitem(ITEM_LOADED_DICE)
	closemessage
	delay(20)
	applymovement(OBJECT_SCIENTIST_2, MossdeepCity_SpaceCenter_1F_Scientist2MoveBackAfterGift)
	waitmovement(0)
	msgbox(format("I hope you get some good use out of these.\p"
	"We will get back to our usual business after a well-deserved rest.\p"
	"Thank you again {PLAYER}.\lWe hope to see you around."), MSGBOX_DEFAULT)
	closemessage
	
	if (flag(FLAG_JIRACHI_WISH_PERFECT_BIDOOF)) {
		fadeoutbgm(0)
		playse(SE_PIN)
		applymovement(OBJECT_OLDMAN, MossdeepCity_SpaceCenter_1F_OldManTalkOnPhone)
		waitmovement(0)
		delay(90)
		applymovement(OBJECT_OLDMAN, MossdeepCity_SpaceCenter_1F_OldManMentionsHighEnergy)
		waitmovement(0)

		msgbox(format("Very sorry to interrupt..."), MSGBOX_DEFAULT)
		closemessage
		delay(8)
		turnobject(OBJ_EVENT_ID_PLAYER, DIR_EAST)
		turnobject(OBJECT_STEVEN, DIR_EAST)
		turnobject(OBJECT_SCIENTIST_2, DIR_EAST)
		turnobject(OBJECT_LAUNCH_COUNTER_SCIENTIST, DIR_EAST)

		applymovement(OBJECT_OLDMAN, Common_Movement_WalkInPlace)
		waitmovement(0)
		msgbox(format("I've just received an urgent message from the weather institute.\p"
		"A few minutes ago, radars started recording unprecedented levels of energy radiating from a landmass to the far east of Hoenn."), MSGBOX_DEFAULT)
		closemessage

		applymovement(OBJECT_SCIENTIST_2, Common_Movement_WalkInPlace)
		waitmovement(0)
		msgbox(format("Is that so? Is it a powerful weather system?"), MSGBOX_DEFAULT)
		closemessage

		applymovement(OBJECT_OLDMAN, Common_Movement_WalkInPlace)
		waitmovement(0)
		msgbox(format("No it doesn't appear so. They said it's manifesting as intense fluctuations in heat and magnetism.\p"
		"That's not all.\lThe landmass it originates from consists mainly of a harsh desert.\p"
		"It's restricted by governments as it is completely uninhabitable for humans and most foreign Pokémon."), MSGBOX_DEFAULT)
		closemessage

		applymovement(OBJECT_STEVEN, Common_Movement_WalkInPlace)
		waitmovement(0)
		msgbox(format("I'm going to presume that we will be sending out a team of researchers?"), MSGBOX_DEFAULT)
		closemessage

		applymovement(OBJECT_OLDMAN, Common_Movement_WalkInPlace)
		waitmovement(0)
		msgbox(format("Naturally.\nWe are coordinating with the weather institute and assembling a team to travel there."), MSGBOX_DEFAULT)
		closemessage

		applymovement(OBJECT_STEVEN, Common_Movement_WalkInPlaceDown)
		waitmovement(0)
		playerfaceobject(OBJECT_STEVEN)
		msgbox(format("This sounds like another opportunity {PLAYER}!\p"
		"You were the good luck charm for the Space Center on their mission, and it was a flawless success.\p"
		"Why not do the same for the Weather Institute?"), MSGBOX_DEFAULT)
		closemessage
		
		turnobject(OBJECT_STEVEN, DIR_EAST)
		turnobject(OBJ_EVENT_ID_PLAYER, DIR_EAST)
		msgbox(format("They would appreciate your presence on this mission {PLAYER}.\p"
		"Steven could be right, you know. Why don't you go and pay the Weather Institute a visit?"
		"Do it soon. I'm sure they will be preparing as we speak."), MSGBOX_DEFAULT)
		closemessage

		playse(SE_PIN)
		applymovement(OBJECT_STEVEN, MossdeepCity_SpaceCenter_1F_StevenConfused)
		waitmovement(0)
		playerfaceobject(OBJECT_STEVEN)
		msgbox(format("This can't be just a coincidence...\p"
		"Perhaps this is your wish coming to fruition...?"), MSGBOX_DEFAULT)
		closemessage

		fadeinbgm(0)
	}

	// If Steven is supposed to be hidden, hide him again.
	if (flag(FLAG_TEMP_1)) {
		setflag(FLAG_HIDE_MOSSDEEP_CITY_SPACE_CENTER_1F_STEVEN)
	}

	warp(MAP_MOSSDEEP_CITY_SPACE_CENTER_1F, 7, 3)
	waitstate

	release
}

